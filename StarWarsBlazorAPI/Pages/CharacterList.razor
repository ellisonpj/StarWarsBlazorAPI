@inject IHttpClientFactory _clientFactory

<div class="col-md-2">
    <table class="table table-hover table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th>@Heading</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < people.Count; i++)
            {
            <tr>
                    <td><a href="@($"/characterdetails/{people[i].Url.Substring(28)}")">@people[i].Name</a></td>
            </tr>
            }
        </tbody>
    </table>

</div>

@code {
    [Parameter]
    public string Heading { get; set; }

    [Parameter]
    public string[] characters { get; set; }

    [Parameter]
    public string ErrorString { get; set; }

    List<People> people = new List<People>();

    protected override async Task OnInitializedAsync()
    {
        var client = _clientFactory.CreateClient("swapi");

        foreach (var character in characters)
        {
            string urlPpath = $"people/{character.Substring(28)}";

            try
            {
                var p = await client.GetFromJsonAsync<People>(urlPpath);

                people.Add(p);

            }
            catch (Exception ex)
            {
                ErrorString = $"There was an error getting people details: { ex.Message } { urlPpath }";
            }
        }
    }
}
